{
  "name": "shikimori-ext",
  "description": "Video player for shikimori",
  "version": "0.1.2",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.shikimori.one/*",
        "https://*.shikimori.me/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["inpage.js", "watch.html"],
    "matches": ["<all_urls>"]
  }]
}
